        <front>
            <titlePage>
                <docTitle>
                    <titlePart type="main">TEI P5 for correspondence</titlePart>
                    <titlePart type="sub">A recommendation for the encoding of correspondence
                        material</titlePart>
                </docTitle>
                <docAuthor>Peter Stadler</docAuthor>
